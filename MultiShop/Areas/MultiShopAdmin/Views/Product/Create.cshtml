@model CreateProductVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Product</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="MainPhoto">Main Image</label>
                    <input asp-for="MainPhoto" class="form-control" placeholder="MainImage" accept="image/*">
                    <span asp-validation-for="MainPhoto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photos">Other Images</label>
                    <input asp-for="Photos" class="form-control" placeholder="Photos" accept="image/*">
                    <span asp-validation-for="Photos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Product Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SKU">SKU</label>
                    <input asp-for="SKU" class="form-control" placeholder="SKU">
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderId">Order</label>
                    <input asp-for="OrderId" class="form-control" placeholder="Order">
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" asp-items="new SelectList(Model.Categories, nameof(IncludeCategoryVM.Id), nameof(IncludeCategoryVM.Name))" class="form-control">
                        <option selected disabled>Choose Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SizeIds">Sizes</label>
                    <select asp-for="SizeIds" asp-items="new SelectList(Model.Sizes, nameof(IncludeSizeVM.Id), nameof(IncludeSizeVM.Name))" class="form-control">
                    </select>
                    <span asp-validation-for="SizeIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ColorIds">Colors</label>
                    <select asp-for="ColorIds" asp-items="new SelectList(Model.Colors, nameof(IncludeColorVM.Id), nameof(IncludeColorVM.Name))" class="form-control">
                    </select>
                    <span asp-validation-for="ColorIds" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>