@model UpdateSlideVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Slide</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title Name</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTitle">Sub-Title Name</label>
                    <input asp-for="SubTitle" class="form-control" placeholder="Sub-Title">
                    <span asp-validation-for="SubTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ButtonText">Button Text</label>
                    <input asp-for="ButtonText" class="form-control" placeholder="Button Text">
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img src="~/img//@Model.ImgUrl" width="25%" />
                    <input asp-for="ImgUrl" type="hidden" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" asp-controller="Slide" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
