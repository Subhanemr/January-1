@model ICollection<WishListItemVM>

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-action="Index" asp-controller="Home">Home</a>
                <a class="breadcrumb-item text-dark" asp-action="Index" asp-controller="Shop">Shop</a>
                <span class="breadcrumb-item active">Wish List</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Add Basket</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (WishListItemVM wishListItem in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="~/img//@wishListItem.Image" alt="@wishListItem.Name" style="width: 50px;"> 
                                <a asp-action="Detail" asp-controller="ShopDetail" asp-route-id="@wishListItem.Id">@wishListItem.Name</a>
                            </td>
                            <td class="align-middle">$@wishListItem.Price</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <a class="btn btn-outline-dark btn-square mx-3" asp-controller="Cart" asp-action="AddBasket" asp-route-id="@wishListItem.Id"><i class="fa fa-shopping-cart"></i></a>
                                </div>
                            </td>
                            <td class="align-middle"><a asp-action="DeleteItem" asp-controller="WishList" asp-route-id="@wishListItem.Id" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Cart End -->