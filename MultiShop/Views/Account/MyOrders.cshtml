@model ICollection<CartItemVM>

<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub-Total</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (CartItemVM cartItem in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="~/img//@cartItem.Image" alt="@cartItem.Name" style="width: 50px;">
                                <a asp-action="Detail" asp-controller="ShopDetail" asp-route-id="@cartItem.Id">@cartItem.Name</a>
                            </td>
                            <td class="align-middle">$@cartItem.Price</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <p class="fw-bold m-1 mx-5">@cartItem.Count</p>
                                </div>
                            </td>
                            <td class="align-middle">$@cartItem.SubTotal</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Cart End -->