@model LoginVM

<div class="container">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post">
        <div class="form-group m-2">
            <label asp-for="UserNameOrEmail">Email or Username</label>
            <input asp-for="UserNameOrEmail" class="form-control" placeholder="Email or Username">
        </div>
        <div class="form-group m-2">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
        </div>
        <div class="form-check m-2">
            <input asp-for="IsRemembered" class="form-check-input">
            <label asp-for="IsRemembered" class="form-check-label" >Remmember Me</label>
        </div>
        <button type="submit" class="btn btn-primary m-2">Submit</button>
    </form>
</div>